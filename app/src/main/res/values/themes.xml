<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@color/primaryLightColor</item>
        <item name="android:backgroundTint">@color/dark_pri</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>
    <style name="SearchViewTheme">
        <item name="editTextBackground">@android:color/transparent</item>
        <item name="android:textColorHint">@color/material_color_grey_500</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:editTextColor">@color/material_color_grey_300</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@drawable/ic_search_black_24dp</item>
        <item name="iconifiedByDefault">false</item>
        <item name="editTextBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>
</resources>